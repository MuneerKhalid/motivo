{
  "compilerOptions": {
    "outDir": "dist",                // Compiled JavaScript output folder
    "rootDir": "src",                // Source files location
    "target": "ES2020",              // Target JavaScript version
    "module": "CommonJS",            // Module system for Node.js
    "strict": true,                  // Enable strict type-checking
    "esModuleInterop": true,         // Allow default imports
    "skipLibCheck": true             // Skip type-checking for libraries
  },
  "include": ["src/**/*"],           // Include all files in the src folder
  "exclude": ["node_modules"]        // Exclude node_modules
}
